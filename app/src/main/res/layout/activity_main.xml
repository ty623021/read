<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.rongteng.base.weight.TitleView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/piple_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/tab_one_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_one" />

                <TextView
                    android:id="@+id/tab_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_one_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/tab_one"
                    android:textColor="@drawable/selector_invest_tv"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_tow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/piple_tow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/tab_tow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_tow" />

                <TextView
                    android:id="@+id/tab_tow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_tow_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/tab_tow"
                    android:textColor="@drawable/selector_invest_tv"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/piple_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/tab_three_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_three" />

                <TextView
                    android:id="@+id/tab_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_three_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/tab_three"
                    android:textColor="@drawable/selector_invest_tv"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/piple_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/tab_four_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_four" />

                <TextView
                    android:id="@+id/tab_four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_four_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/tab_four"
                    android:textColor="@drawable/selector_invest_tv"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_five_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/piple_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="4dp"
                android:paddingTop="@dimen/dp_6">

                <ImageView
                    android:id="@+id/tab_five_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_five" />

                <TextView
                    android:id="@+id/tab_five_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_five_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/tab_five"
                    android:textColor="@drawable/selector_invest_tv"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
