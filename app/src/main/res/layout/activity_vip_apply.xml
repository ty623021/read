<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <com.rongteng.base.weight.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"></com.rongteng.base.weight.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/layout_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_small"/>

            <com.rongteng.base.weight.EditTextWithDel
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/et_realName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:maxLength="18"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

        </LinearLayout>

        <include layout="@layout/view_line_default"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_small"/>

            <com.rongteng.base.weight.EditTextWithDel
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/et_idCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请输入身份证号"
                android:maxLength="18"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

        </LinearLayout>

        <include layout="@layout/view_line_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性        别"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_small"/>

            <com.rongteng.base.weight.EditTextWithDel
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/et_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请输入性别"
                android:maxLength="18"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

        </LinearLayout>

        <include layout="@layout/view_line_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请城市"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_small"/>

            <com.rongteng.base.weight.EditTextWithDel
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/et_applyCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请输入申请城市"
                android:maxLength="18"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

        </LinearLayout>

        <include layout="@layout/view_line_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常驻地址"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_small"/>

            <com.rongteng.base.weight.EditTextWithDel
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:background="@null"
                android:hint="请输入常驻地址"
                android:maxLength="18"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

        </LinearLayout>

        <include layout="@layout/view_line_default" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_30"
            android:background="@drawable/layout_background"/>
    </LinearLayout>

    <Button
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/shape_btn_background"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/size_sp_15" />
</LinearLayout>
