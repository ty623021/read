<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="@dimen/margin_left_right_12"
        android:layout_marginRight="@dimen/margin_left_right_12"
        android:background="@drawable/shape_edit_text_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/login_pass"
            android:textColor="@color/black_text" />

        <com.rongteng.base.weight.EditTextWithDel
            android:id="@+id/et_user_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_height"
            android:layout_toLeftOf="@+id/eyes_linear"
            android:layout_toRightOf="@id/img"
            android:background="@null"
            android:hint="@string/hint_pass"
            android:maxLength="16"
            android:paddingRight="@dimen/margin_10"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/size_sp_12" />

        <LinearLayout
            android:id="@+id/eyes_linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/close_eyes" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
