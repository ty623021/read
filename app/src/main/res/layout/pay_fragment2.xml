<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rongteng.base.weight.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20">

            <com.rongteng.base.weight.EditTextWithDel
                android:id="@+id/pay_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginRight="@dimen/margin_40"
                android:background="@drawable/shape_edit_background_rect"
                android:hint="请输入支付密码"
                android:maxLength="16"
                android:paddingLeft="@dimen/margin_12"
                android:paddingRight="@dimen/margin_10"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/size_sp_12" />

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pay_password"
                android:layout_marginRight="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_5"
                android:text="忘记密码?"
                android:textColor="@color/button_color"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_marginTop="@dimen/margin_35"
        android:background="@drawable/shape_btn_background"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/size_sp_15" />
</LinearLayout>
