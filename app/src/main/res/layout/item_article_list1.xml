<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mediareport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_left_right_12"
        android:layout_marginRight="@dimen/margin_left_right_12"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_itemId"
            android:layout_width="130dp"
            android:layout_height="@dimen/margin_90"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_90"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_press"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_press"
                android:layout_marginTop="@dimen/margin_10"
                android:lines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_micro" />

            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_tip_color"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>