<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rongteng.base.pullview.AbPullToRefreshView
            android:id="@+id/pull"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:orientation="vertical">

            <com.rongteng.base.weight.CustomScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@drawable/shape_person_background"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rl_account"
                                android:layout_width="match_parent"
                                android:layout_height="160dp">

                                <ImageView
                                    android:id="@+id/iv_per"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/margin_18"
                                    android:src="@drawable/person_user" />

                                <LinearLayout
                                    android:id="@+id/linear_user_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/iv_per"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:text="名称"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_sp_small" />

                                    <TextView
                                        android:id="@+id/tv_user_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginTop="@dimen/margin_5"
                                        android:text="id"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/size_sp_small" />
                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/asset_detail_relative"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/layout_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_asset_detail_pack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:src="@drawable/person_vip" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_line"
                                android:layout_below="@+id/relative_asset_detail"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_asset_detail_pack"
                                android:background="@color/gray_line_default" />

                            <RelativeLayout
                                android:id="@+id/relative_asset_detail"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_asset_detail_pack">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="会员申请"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/size_sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_tip_color"
                                        android:textSize="@dimen/size_sp_micro"
                                        android:visibility="visible" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:background="@drawable/right"
                                        android:gravity="center" />
                                </LinearLayout>
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/invite_friends_relative"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/layout_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_invite_friends"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:src="@drawable/person_invitation_friend" />

                            <RelativeLayout
                                android:id="@+id/relative_invite_friends"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_invite_friends">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="邀请好友"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/size_sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="@color/text_tip_color"
                                        android:textSize="@dimen/size_sp_micro" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:background="@drawable/right"
                                        android:gravity="center" />
                                </LinearLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_line"
                                android:layout_below="@+id/relative_invite_friends"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_invite_friends"
                                android:background="@color/gray_line_default" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/mall_relative"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height"
                            android:visibility="gone"
                            android:background="@drawable/layout_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_integral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:src="@drawable/my_mall" />

                            <RelativeLayout
                                android:id="@+id/relative_integral"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_integral">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="我的积分"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/size_sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_integral"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/size_sp_micro" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:background="@drawable/right"
                                        android:gravity="center" />
                                </LinearLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_line"
                                android:layout_below="@+id/relative_integral"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_integral"
                                android:background="@color/gray_line_default" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/help_relative"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/layout_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:src="@drawable/person_help_center" />

                            <RelativeLayout
                                android:id="@+id/relative_help"
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_help">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="帮助中心"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/size_sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_help"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="@color/text_tip_color"
                                        android:textSize="@dimen/size_sp_micro" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:background="@drawable/right"
                                        android:gravity="center" />
                                </LinearLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_line"
                                android:layout_below="@+id/relative_help"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_help"
                                android:background="@color/gray_line_default" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/setting_relative"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_height"
                            android:background="@drawable/layout_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:src="@drawable/person_setting" />

                            <RelativeLayout
                                android:id="@+id/relative_setting"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_toRightOf="@+id/iv_setting">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="设置"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/size_sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_setting"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="@color/text_tip_color"
                                        android:textSize="@dimen/size_sp_micro" />


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_5"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:background="@drawable/right"
                                        android:gravity="center" />
                                </LinearLayout>
                            </RelativeLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </RelativeLayout>

            </com.rongteng.base.weight.CustomScrollView>
        </com.rongteng.base.pullview.AbPullToRefreshView>

        <include
            layout="@layout/not_login_tip"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"></include>
    </FrameLayout>

    <com.rongteng.base.weight.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>