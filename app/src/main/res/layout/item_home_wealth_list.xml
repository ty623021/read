<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_background"
    android:orientation="vertical">

    <include layout="@layout/view_line_default" />

    <LinearLayout
        android:id="@+id/invest_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/invest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="体验标"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/invest_type"
                android:background="@drawable/shape_red_textview"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:paddingTop="@dimen/dp_1"
                android:text="奖1.6%"
                android:textColor="@drawable/text_color_white_or_blue"
                android:textSize="@dimen/size_sp_10" />

            <TextView
                android:id="@+id/tv_reward2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_toRightOf="@+id/tv_reward"
                android:background="@drawable/shape_red_textview"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_2"
                android:visibility="gone"
                android:paddingRight="@dimen/dp_2"
                android:paddingTop="@dimen/dp_1"
                android:text="奖1.6%"
                android:textColor="@drawable/text_color_white_or_blue"
                android:textSize="@dimen/size_sp_10" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_toLeftOf="@+id/relative">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/interest_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:text="20"
                        android:textColor="@color/number_color"
                        android:textSize="@dimen/size_sp_24" />

                    <TextView
                        android:id="@+id/interest_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:text=".00%"
                        android:textColor="@color/number_color"
                        android:textSize="@dimen/size_sp_15" />

                    <TextView
                        android:id="@+id/interest_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:text="20"
                        android:textColor="@color/number_color"
                        android:textSize="@dimen/size_sp_24"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/interest_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:text=".00"
                        android:textColor="@color/number_color"
                        android:textSize="@dimen/size_sp_15"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/add_interest_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="+1%"
                        android:textColor="@color/number_color"
                        android:textSize="@dimen/size_sp_15" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="预期年化"
                    android:textColor="@color/text_tip_color"
                    android:textSize="@dimen/size_sp_small" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/invest_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_sp_24" />

                    <TextView
                        android:id="@+id/invest_date_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/size_sp_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="期限"
                    android:textColor="@color/text_tip_color"
                    android:textSize="@dimen/size_sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <FrameLayout
                    android:id="@+id/frame_roundWave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:visibility="visible">

                    <com.rongteng.base.weight.RoundProgressBar
                        android:id="@+id/roundProgress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="visible"
                        app:max="100"
                        app:roundColor="@color/gray_line_default"
                        app:roundProgressColor="@color/colorPrimary"
                        app:roundWidth="1dp"
                        app:textColor="@color/colorPrimary"
                        app:textIsDisplayable="true"
                        app:textSize="@dimen/size_sp_small" />

                </FrameLayout>

                <TextView
                    android:id="@+id/bt_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/shape_btn_background_blue"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:text="立即转入"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_sp_micro"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
