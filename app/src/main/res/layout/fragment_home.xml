<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background">

    <com.rongteng.base.pullview.AbPullToRefreshView
        android:id="@+id/pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/viewPager_content"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/notice_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fl_ones"
                    android:background="@drawable/layout_background"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_15"
                        />

                    <com.jlbeauty.read.weight.AutoTextView
                        android:id="@+id/home_notice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/notice_more"
                        android:layout_toRightOf="@id/img" />

                    <TextView
                        android:id="@+id/notice_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_10"
                        android:padding="@dimen/margin_5"
                        android:text="更多"
                        android:textColor="@color/text_tip_color"
                        android:textSize="@dimen/size_sp_micro" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:background="@drawable/layout_background"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/brandIntroductionLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/layout_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/more_brand_img"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_horizontal"
                            android:text="美会介绍"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/size_sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mediaCoverageLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/more_media_coverage"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_horizontal"
                            android:text="美会播报"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/size_sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/platformLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/more_platform_img"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_horizontal"
                            android:text="美会商院"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/size_sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/securityGuaranteeLinear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/more_safety_img"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center_horizontal"
                            android:text="美会联盟"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/size_sp_12" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.rongteng.base.pullview.AbPullToRefreshView>

    <LinearLayout
        android:id="@+id/main_title_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/colorPrimary2"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/main_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="美读会"
            android:textColor="@color/white"
            android:textSize="@dimen/size_sp_medium" />

    </LinearLayout>
</RelativeLayout>