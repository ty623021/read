<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色 -->
            <solid android:color="#FEF7F7" />
            <stroke android:color="@color/main_color" android:width="0.6dp"></stroke>
            <!-- 设置按钮的四个角为弧形 -->
            <corners android:radius="3dp"></corners>
            <padding android:bottom="@dimen/dp_1" android:left="@dimen/dp_2" android:right="@dimen/dp_2" android:top="@dimen/dp_1"></padding>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色 -->
            <solid android:color="#FEF7F7" />
            <stroke android:color="@color/main_color" android:width="0.6dp"></stroke>
            <!-- 设置按钮的四个角为弧形 -->
            <corners android:radius="3dp"></corners>
            <padding android:bottom="@dimen/dp_1" android:left="@dimen/dp_2" android:right="@dimen/dp_2" android:top="@dimen/dp_1"></padding>
        </shape>
    </item>


</selector>