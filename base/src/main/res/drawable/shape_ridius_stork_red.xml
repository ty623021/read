<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色 -->
            <solid android:color="@color/white_pressed" />
            <!-- 设置按钮的四个角为弧形 -->
            <stroke android:width="@dimen/dp_1" android:color="@color/red_color"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色 -->
            <solid android:color="@color/white" />
            <!-- 设置按钮的四个角为弧形 -->
            <stroke android:width="@dimen/dp_1" android:color="@color/red_color"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- 填充的颜色 -->
            <solid android:color="@color/red_enabled_false" />
            <stroke android:width="@dimen/dp_1" android:color="@color/red_color"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>

</selector>